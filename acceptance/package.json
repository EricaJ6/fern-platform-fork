{
  "name": "fern-platform-acceptance-tests",
  "version": "1.0.0",
  "description": "Comprehensive acceptance tests for Fern Platform",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:ui": "jest --testPathPattern=features/ui",
    "test:api": "jest --testPathPattern=features/api", 
    "test:integration": "jest --testPathPattern=features/integration",
    "test:smoke": "TEST_CATEGORY=smoke jest",
    "test:setup": "node scripts/setup-test-environment.js",
    "test:teardown": "node scripts/teardown-test-environment.js",
    "test:performance": "TEST_CATEGORY=performance jest",
    "test:debug": "DEBUG=fern:* jest --no-cache --runInBand",
    "test:report": "jest --reporters=default --reporters=jest-html-reporters",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.14.0",
    "puppeteer": "^21.0.0"
  },
  "devDependencies": {
    "@jest/environment": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.8.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-html-reporters": "^3.1.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "./setup/test-environment.ts",
    "testTimeout": 120000,
    "setupFilesAfterEnv": ["<rootDir>/setup/test-helpers.ts"],
    "moduleNameMapping": {
      "^@acceptance/(.*)$": "<rootDir>/$1",
      "^@fixtures/(.*)$": "<rootDir>/fixtures/$1",
      "^@utils/(.*)$": "<rootDir>/utils/$1",
      "^@features/(.*)$": "<rootDir>/features/$1"
    }
  }
}